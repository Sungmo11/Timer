<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudyTraceActivity">

    <HorizontalScrollView
        android:id="@+id/scrollView_studytrace"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_scrolltest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="1"
                />

            <Button
                android:id="@+id/btn_scrolltest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="2"
                />

            <Button
                android:id="@+id/btn_scrolltest3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="3"
                />

            <Button
                android:id="@+id/btn_scrolltest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="4"
                />

            <Button
                android:id="@+id/btn_scrolltest5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="5"
                />

            <Button
                android:id="@+id/btn_scrolltest6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testscroll"
                android:text="6"
                />


        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_below="@+id/scrollView_studytrace"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/tv_scrollviewtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTSIZE"
        android:textSize="50sp"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_studytrace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="공부흔적"
            />

        <Button
            android:id="@+id/btn_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이페이지"
            />

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스톱와치"
        android:layout_marginBottom="40dp"
        android:onClick="testClick"
        android:layout_gravity="center"
        />

</RelativeLayout>